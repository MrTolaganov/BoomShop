{{#if products.length}}
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each products}}
      <div class="col">
        <div class="card shadow-sm">
          <img src="{{image}}" alt="" />
          <div class="card-body">
            <p class="card-text fw-bold fs-4">{{title}}</p>
            <div class="d-flex justify-content-between align-items-center">
              <p class="text-muted">{{formatDate createdAt}}</p>
              <p class="text-muted fs-5">{{price}}.00$</p>
            </div>
          </div>
          <div class="card-footer">
            <div class="btn-group btn-group-sm">
              <a
                href="/product/{{_id}}"
                type="button"
                class="btn btn-sm btn-outline-primary"
              >View</a>
              {{#if @root.token}}
                {{#ifequal user @root.userId}}
                  <a
                    href="/edit-product/{{_id}}"
                    type="button"
                    class="btn btn-sm btn-outline-secondary"
                  >Edit</a>
                  <form action="/delete-product/{{_id}}" method="post" class="m-0">
                    <button
                      type="submit"
                      class="btn btn-sm btn-outline-danger"
                    >Delete</button>
                  </form>
                {{/ifequal}}
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>No products</p>
{{/if}}